{
  "version": 3,
  "builds": [
    {
      "src": "backend/Server.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/Server.js"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "commands": {
      "install": "npm install --prefix Server && npm install --prefix client",
      "build": "npm run build --prefix client"
    }
  }
}
